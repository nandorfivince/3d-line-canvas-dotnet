<Window x:Class="_3DLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DLine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Slider x:Name="lineThickness" Value="10" Minimum="10" Maximum="100" MinWidth="100" MinHeight="24" 
                DockPanel.Dock="Top" ValueChanged="lineThickness_ValueChanged" Interval="1"/>
        <ToolBar MinHeight="32" DockPanel.Dock="Top">
            
            <Button x:Name="btnX1" MinHeight="24" MinWidth="24" Click="btnX1_Click">X1</Button>
            <Button x:Name="btnY1" MinHeight="24" MinWidth="24" Click="btnX1_Click">Y1</Button>
            <Button x:Name="btnX2" MinHeight="24" MinWidth="24" Click="btnX1_Click">X2</Button>
            <Button x:Name="btnY2" MinHeight="24" MinWidth="24" Click="btnX1_Click">Y2</Button>
        </ToolBar>

        <Canvas x:Name="myCanvas">

        </Canvas>
    </DockPanel>

</Window>
